extends _layout.pug
block locals
  - let title = "Simply Piano"
block content
  main
    .content
      .display
        p.display__heading Let's Play the Piano ♪
        .decoration
          ul.decoration__list
            - for (var i = 1; i < 11; i++)
              li.decoration__item-star(class="star-" + i) ★
              li.decoration__item-flower(class="flower-" + i) ❀

      .keyboard
        include _data.pug
          each item in items
            div.keyboard__keys(class=item.className)
              p #{item.displayText}

      .autoPlay
        button.autoPlay__btn AutoPlay ♪
